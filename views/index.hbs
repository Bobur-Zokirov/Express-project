{{#if products.length}}
    <div class="container album bg-body-tertiary">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}
            <div class="col py-4">
                <div class="card">
                    <a href=/products/{{_id}}>
                    <img src={{image}} class="img-thumbnail img-fluid hover-img" alt={{title}}>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title text-capitalize">{{this.title}}</h5>
                        <div class="rounded d-flex justify-content-between align-items-center mt-4 bg-secondary-subtle">
                            {{!-- <p>{{createdAt}}</p> --}}
                            <div class="avatar">
                                <p>{{user.firstName}}</p>
                                <p>{{user.lastName}}</p>
                            </div>
                            <small class="fs-5 px-2 text-primary">${{this.price}}</small>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
      </div>
    </div>

{{else}}
    <h2 class="text-center">Oops, there's no product...</h2>
    
{{/if}}

