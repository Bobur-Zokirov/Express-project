{{#if products.length}}
    <div class="container album bg-body-tertiary">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each products}}
            <div class="col py-4">
                <div class="card">
                    <img src={{image}} class="img-thumbnail img-fluid" alt={{title}}>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{this.title}}</h5>
                        <div class="d-flex justify-content-between align-items-center">
                            <p>{{createdAt}}</p>
                            <small class="text-muted fs-5">${{this.price}}</small>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <div class="btn-group  btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-secondary">Detail</button>
                            {{#if @root.token}}
                                {{#ifequal user @root.userId}}
                                    <button type="button" class="btn btn-outline-primary">Edit</button>
                                    <button type="button" class="btn btn-outline-danger">Delete</button>
                                {{/ifequal}}
                            {{/if}}
                            
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
      </div>
    </div>

{{else}}
    <h2 class="text-center">Oops, there's no product...</h2>
    
{{/if}}

