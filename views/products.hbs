{{#if myProducts.length}}
    <div class="container album bg-body-tertiary">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each myProducts}}
            <div class="col py-4">
                <div class="card">
                    <a href="/product/{{_id}}">
                        <img src={{image}} class="img-thumbnail img-fluid" alt={{title}}>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><a href="/product/{{_id}}">{{title}}</a></h5>
                        <div class="d-flex justify-content-start align-items-center">
                        <p>{{description}}</p>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                        <small class="text-muted fs-5">${{this.price}}.00</small>
                        <small class=" fst-italic">Created at: <b>{{createDate createdAt}}</b></small>
                        <div class="btn-group  btn-group-sm" role="group">
                            <a href="/edit-product/{{_id}}" type="button" class="btn btn-outline-primary">Edit &#9998</a>
                            <button type="button" class="btn btn-outline-danger">Delete &#9940</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
      </div>
    </div>

{{else}}
    <h2 class="text-center">Oops, You haven't added any products yet...</h2>
    
{{/if}}

