{{#if myProducts.length}}
    <div class="container album bg-body-tertiary">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each myProducts}}
            <div class="col py-4">
                <div class="card">
                    <a href=/products/{{_id}}>
                    <img src={{image}} class="img-thumbnail img-fluid" alt={{title}}>
                    </a>
                    <div class="card-body">
                        <h5 class="card-title fw-bold">{{this.title}}</h5>
                        <div class="d-flex justify-content-start align-items-center">
                        <p>{{description}}</p>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between align-items-center">
                            {{!-- <p>{{createdAt}}</p> --}}
                            <small class="text-muted fs-5">${{this.price}}</small>
                        <div class="btn-group  btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-primary">Edit &#9998</button>
                            <button type="button" class="btn btn-outline-danger">Delete &#9940</button>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
      </div>
    </div>

{{else}}
    <h2 class="text-center">Oops, You haven't added any products yet...</h2>
    
{{/if}}

