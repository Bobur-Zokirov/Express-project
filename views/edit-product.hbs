<div class="w-75 mx-0 bg-dark p-4">
    <h2 class="mb-3 text-white">Edit product</h2>
    {{#if editProductError}}
        <div class="alert alert-primary alert-dismissible fade show" role="alert">
            <strong class="fs-5 me-3 text-danger">Error!</strong> <span class="fs-5">{{editProductError}}</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/if}}
    <form action="/edit-product/{{product._id}}" method="post">
        <div class="form-floating mb-3">
            <input value="{{product.title}}" type="text" class="form-control" name="title" id="floatingTitle" placeholder="Title">
            <label for="floatingTitle">Title</label>
        </div>
        
        <div class="form-floating mb-3">
            <textarea type="text" class="form-control" name="description" id="floatingDescription" placeholder="Description" style="height: 200px">{{product.description}}</textarea>
            <label for="floatingDescription">Description</label>
        </div>

        <div class="form-floating mb-3">
            <input value="{{product.image}}" type="text" class="form-control" name="image" id="floatingImage" placeholder="Image"/>
            <label for="floatingImage" class="form-label">Choose image</label>
        </div>

        <div class="form-floating mb-3">
            <input value="{{product.price}}" type="number" class="form-control" name="price" id="floatingPrice" placeholder="Price"/>
            <label for="floatingPrice" class="form-label">$Price</label>
        </div>
        <button type="submit" class="btn btn-success w-10 py-3 px-4">Edit product</button>
    </form>
</div>